{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@container/*": ["./src/container/*"],
      "@api": ["./src/api/index.tsx"],
      "@type/*": ["./src/type/*"],
      "@styles/*": ["./src/styles/*"],
      "@images/*": ["./public/images/*"],
      "@video/*": ["./public/videos/*"],
      "@lib/*": ["./src/lib/*"],
      "@component/*": ["./src/lib/components/*"],
      "@shadcn/*": ["./src/lib/components/ui/*"],
      "@contentJson": ["./src/content.json"]
    }
  },
  "include": [
    "next.config.mjs",
    "server/server.mjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
